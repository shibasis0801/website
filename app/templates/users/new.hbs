<section class="section">
  <div class="container">
    <form>
      <div class="block">
        <label for="email">Email Address</label>
        {{input
          value=email
          class="input"
          placeholder="Enter email address"
          type="text" name="name" id="id" required=true}}
      </div>

      <div class="block">
        <label for="name">Name</label>
        {{input
          value=displayName
          class="input"
          placeholder="Enter User Name"
          type="text" name="name" id="name" required=true}}
      </div>

      <div class="block">
        <label for="phone">Phone Number</label>
        {{input
          value=phoneNumber
          class="input"
          placeholder="Enter User Phone"
          type="text" name="phone" id="phone" required=true}}
      </div>


      <div class="block">
        <div class="level">
          <div class="level-left">
            <a {{action "create"}} type="submit" class="button is-info">
              Create
            </a>
          </div>
          <div class="level-right">
            <a {{action "cancel"}} class="button is-danger">
              Cancel
            </a>
          </div>
        </div>
      </div>


    </form>
  </div>
</section>