{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.email}}
  <button {{action 'signOut'}}>
    Sign Out
  </button>
  <nav class="navbar is-light">
    <div class="navbar-brand">
      <a class="navbar-item" href="#">
        <h1 class="subtitle">
          Smart Valve
        </h1>
      </a>
      <!-- Add Here Later -->
      <button class="button navbar-burger is-light">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>

    <div class="navbar-menu">
      <div class="navbar-start">
        <!--Valves-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'valves' class="navbar-link"}}
            Valves
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'valves.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!--Users-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'users' class="navbar-link"}}
            Users
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'users.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!--Admin-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'admin' class="navbar-link"}}
            Admin
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'admin.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!-- About -->
        <div class="navbar-item is-hoverable">
          {{#link-to 'about' class='navbar-item'}}
            About
          {{/link-to}}
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item is-hoverable">
          <div class="field has-addons">
            <div class="control">
              <input class="input" type="text" placeholder="Find Valve or User">
            </div>
            <div class="control">
              <a class="button is-info">
                Search
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <section class="hero is-dark is-fullheight">
    <div class="hero-body">
      <div class="container">
        {{outlet}}
      </div>
    </div>
    <div class="hero-footer">
      <div class="container has-text-centered">
        <a href="https://bulma.io/">
          <img src="https://bulma.io/images/made-with-bulma--semiwhite.png" alt="Made with Bulma" width="160" height="30">
        </a>
      </div>
    </div>
  </section>
{{else}}
  <form>


  {{input
    type='text'
    class='form-control'
    value=model.credentials.email
    placeholder='email'
  }}
  {{input
    type='password'
    class='form-control'
    value=model.credentials.password
    placeholder='password'
  }}
  <button {{action 'signIn'}}>
    Sign In
  </button>

  </form>
{{/if}}
