
{{#if session.isAuthenticated}}

  <nav class="navbar is-light">
    <div class="navbar-brand">
      <a class="navbar-item" href="#">
        <h1 class="subtitle">
          Smart Valve
        </h1>
      </a>
      <!-- Add Here Later -->
      <span class="navbar-burger burger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>

    <div class="navbar-menu">
      <div class="navbar-start">
        <!--Valves-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'valves' class="navbar-link"}}
            Valves
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'valves.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!--Users-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'users' class="navbar-link"}}
            Users
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'users.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!--Admin-->
        <div class="navbar-item has-dropdown is-hoverable">
          {{#link-to 'admin' class="navbar-link"}}
            Admin
          {{/link-to}}

          <div class="navbar-dropdown">
            {{#link-to 'admin.new' class="navbar-item"}}
              New
            {{/link-to}}
          </div>
        </div>

        <!-- About -->
        <div class="navbar-item is-hoverable">
          {{#link-to 'posts' class='navbar-item'}}
            About
          {{/link-to}}
        </div>

        <div class="navbar-item is-hoverable">
          <a class="navbar-item" {{action 'signOut'}}>
            Sign Out
          </a>
        </div>

      </div>
      <div class="navbar-end">
        <div class="navbar-item is-hoverable">
          <div class="field has-addons">
            <div class="control">
              <input class="input" type="text" placeholder="Find Valve or User">
            </div>
            <div class="control">
              <a class="button is-info">
                Search
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <section class="hero is-fullheight is-dark">
    <div class="hero-body">
      {{outlet}}
    </div>
    <div class="hero-foot">
      <div class="container has-text-centered">
        <a href="https://bulma.io/">
          <img src="https://bulma.io/images/made-with-bulma--semiwhite.png" alt="Made with Bulma" width="160" height="30">
        </a>
      </div>
    </div>
  </section>
{{else}}
  <section class="hero is-dark is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="card">
          <div class="card-content">
            <form>
            <div class="field">
              <label class="label" for="input_email">Email</label>
              <div id="input_email" class="control has-icons-left has-icons-right">
                {{input
                  type='email'
                  class='input'
                  value=model.credentials.email
                  placeholder='Ex. shibasis0801@gmail.com'
                }}
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>

            <div class="field">
              <label class="label" for="input_password">Password</label>
              <div id="input_password" class="control has-icons-left has-icons-right">
                {{input
                  type='password'
                  class='input'
                  value=model.credentials.password
                  placeholder='Ex. Ruler05Valves$'
                }}
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
              <button class="button is-info" {{action 'signIn' model model.credentials.email model.credentials.password}}>
                Sign In
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/if}}
