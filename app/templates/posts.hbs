<h2>
  New Post
</h2>
<ul>
  <li>
    {{input value=title placeholder="Title"}}
  </li>

  <li>
    {{input value=body placeholder="Body"}}
  </li>

  <button {{action "publishPost"}}>
    Publish
  </button>
</ul>

<section>
  {{#each model as |post|}}
    <div>{{post.title}}</div>
    <div>{{post.body}}</div>
  {{/each}}
</section>